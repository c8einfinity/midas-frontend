<?xml version="1.0"?>
<!-- /**
 * Customer Account Page for link
 */ -->
<!-- Use to add links in and customer account navigation -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" design_abstraction="custom">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-quotesystem-index-link" ifconfig="quotesystem/mot_quotesystemsetting/mot_quotesystemenabledisable" cacheable="false">
                <arguments>
                    <argument name="path" xsi:type="string">quotesystem/buyerquote</argument>
                    <argument name="label" xsi:type="string" translate="true">My Quotes</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
